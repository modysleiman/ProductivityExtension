{
  "manifest_version": 2,

  "name": "ProductivityTimer",
  "version": "0.1.0",
  "description": "Productivity Prevention Extension",


  "content_scripts": [{
    
    "css": ["popup.css"],
    "matches": ["https://www.facebook.com/*"]
  }],

  "browser_action": {
    "default_icon" : "logo.png",
    "default_popup" : "popup.html",
    "default_title" : "Procrastination Prevention"
  }
}